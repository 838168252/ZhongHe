<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/grayness"
    tools:context=".ui.fragment.bindingFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="1"
            android:padding="1dp"
            android:text="TID:"
            android:textColor="#6A6767"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@color/color7474" />

        <EditText
            android:id="@+id/b_TID"
            android:spinnerMode="dialog"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="19"
            android:gravity="center"
            android:padding="1dp"
            android:text=""
            android:textSize="17sp" />

        <Button
            android:id="@+id/b_scan"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="扫描"
            android:textColor="#FDFBFB"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="1"
            android:padding="1dp"
            android:text="二维码:"
            android:textColor="#6A6767"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@color/color7474" />

        <EditText
            android:id="@+id/b_QR"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:ems="19"
            android:gravity="center"
            android:padding="1dp"
            android:text=""
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="1"
            android:padding="1dp"
            android:text="批次号:"
            android:textColor="#6A6767"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@color/color7474" />

        <EditText
            android:id="@+id/b_batch"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:ems="19"
            android:gravity="center"
            android:padding="1dp"
            android:text=""
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="1"
            android:padding="1dp"
            android:text="货物种类:"
            android:textColor="#6A6767"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@color/color7474" />

        <EditText
            android:id="@+id/b_type"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:ems="19"
            android:gravity="center"
            android:padding="1dp"
            android:text=""
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="1"
            android:padding="1dp"
            android:text="备注:"
            android:textColor="#6A6767"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@color/color7474" />

        <EditText
            android:id="@+id/b_comment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:ems="19"
            android:gravity="center"
            android:padding="1dp"
            android:text=""
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/b_but1"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg"
            android:text="绑  定"
            android:textColor="#FDFBFB"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/b_but2"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_bg"
            android:text="清  空"
            android:textColor="#FDFBFB"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>